<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yee.filemanager.mapper.EmployeeMapper">
    <select id="getEmployeeById" resultType="com.yee.filemanager.bean.Employee" >
    select id,last_name lastName,email,gender from tbl_employee where id = #{id}
  </select>

    <insert id="addEmployee" parameterType="com.yee.filemanager.bean.Employee" useGeneratedKeys="true" keyProperty="id">
        insert into tbl_employee(last_name,email,gender) values(#{lastName},#{email},#{gender})
    </insert>

    <update id="updateEmp">
        update tbl_employee set last_name=#{lastName},email=#{email},gender=#{gender} where id = #{id}
    </update>

    <delete id="deleteEmpById">
        delete from tbl_employee where id=#{id}
    </delete>
</mapper>